<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

        <HorizontalScrollView
            android:id="@+id/categories_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:scrollbars="none"
            android:layout_marginBottom="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/inv_chip_group"
                android:layout_marginStart="16dp"
                android:paddingStart="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="RtlSymmetry">

                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/plants_chips"
                    android:checkable="true"
                    android:clickable="true"
                    android:focusable="true"
                    android:id="@+id/plant_chip"
                    style="@style/CustomChipChoice"
                    app:closeIconEnabled="false" />

                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/trees"
                    android:id="@+id/trees_chip"
                    style="@style/CustomChipChoice"
                    android:checkable="true"
                    android:clickable="true"
                    android:focusable="true"
                    app:closeIconEnabled="false" />

                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bagged_materials"
                    android:id="@+id/bagged_material"
                    style="@style/CustomChipChoice"
                    android:checkable="true"
                    android:clickable="true"
                    android:focusable="true"
                    app:closeIconEnabled="false" />

                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bulk_materials"
                    android:id="@+id/bulk_materials"
                    style="@style/CustomChipChoice"
                    android:checkable="true"
                    android:clickable="true"
                    android:focusable="true"
                    app:closeIconEnabled="false" />

                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pottery_materials"
                    android:id="@+id/pottery_materials"
                    style="@style/CustomChipChoice"
                    android:checkable="true"
                    android:clickable="true"
                    android:focusable="true"
                    app:closeIconEnabled="false" />

                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/landscape_supply"
                    android:id="@+id/landscape_supply"
                    android:checkable="true"
                    android:clickable="true"
                    android:focusable="true"
                    style="@style/CustomChipChoice"
                    app:closeIconEnabled="false" />

                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sod"
                    android:checkable="true"
                    android:clickable="true"
                    android:focusable="true"
                    android:id="@+id/sod"
                    style="@style/CustomChipChoice"
                    app:closeIconEnabled="false" />

            </com.google.android.material.chip.ChipGroup>

        </HorizontalScrollView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            android:paddingTop="5dp"
            android:paddingBottom="10dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/categories_scroll_view"
            tools:listitem="@layout/inventory_card_item" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/inv_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="17dp"
            android:backgroundTint="@color/primary_color"
            android:contentDescription="@string/cart"
            android:src="@drawable/ic_add"
            app:fabCustomSize="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:maxImageSize="45dp" />
        <ProgressBar
            android:id="@+id/inventory_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminateDrawable="@drawable/progress"
            android:layout_centerInParent="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
